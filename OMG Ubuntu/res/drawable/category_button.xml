<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="true"><layer-list>
            <item>
                <shape>
                    <solid android:color="@color/Ubuntu" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#2fff" />
                </shape>
            </item>
            <item>
                <shape>
                    <stroke android:width="2dp" android:color="@color/Ubuntu" />
                    <solid android:color="#0fff" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true" android:state_focused="true">
        <shape></shape>
    </item>
    <item android:state_enabled="true"><shape>
            <padding android:bottom="0dip" android:left="5dp" android:right="5dp" android:top="0dip" />
            <solid android:color="@android:color/transparent" />
        </shape></item>

</selector>